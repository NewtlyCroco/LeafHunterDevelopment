<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/collectionsRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layoutManager="LinearLayoutManager"
    android:orientation="vertical"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/collectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tropical Plants"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="(8/12)"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Progress -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="8dp"
        app:trackColor="@color/green_700"
        app:trackThickness="4dp"
        app:progressColor="@color/yellow"/>

    <!-- Plants Preview -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Mini plant cards (reusing item_plant_collection but scaled down) -->
            <include layout="@layout/item_plant_collection"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="8dp"/>

            <!-- Complete Collection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/green_700"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/yellow"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_trophy"
                        android:tint="@color/yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Complete Collection"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>